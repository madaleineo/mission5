@{
    ViewData["Title"] = "Movie List";
}

@model FilmCollectionMission4.Models.ApplicationResponse

<h1>Enter your movie here!</h1>

<div class="text-center">
    <form method="post">

        <div asp-validation-summary="All"></div>
        @if (ViewBag.New == false)
        {
            <input type="hidden" value="@Model.MovieID" />
        }

        <label asp-for="CategoryID">Movie Category: </label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (CategoryList cl in ViewBag.CategoryList)
            {
                <option value="@cl.CategoryID">@cl.Category</option>
            }
        </select>

        <br />
        <label asp-for="Title">Movie Title: </label>
        <input asp-for="Title" />

        <br />
        <label asp-for="Year">Year: </label>
        <input asp-for="Year" />

        <br />
        <label asp-for="DirectorFirst">Director First Name: </label>
        <input asp-for="DirectorFirst" />

        <br />
        <label asp-for="DirectorLast">Director Last Name: </label>
        <input asp-for="DirectorLast" />

        <br />
        <label asp-for="Rating">Movie Rating: </label>
        <select asp-for="Rating">
            <option value="g">G</option>
            <option value="pg">PG</option>
            <option value="pg-13">PG-13</option>
            <option value="r">R</option>
        </select>

        <br />
        <label asp-for="Edited">Edited: </label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>

        <br />
        <label asp-for="LentTo">Lent To: </label>
        <input asp-for="LentTo" />

        <br />
        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" />

        <br />
        <button type="submit">Submit Movie</button>

    </form>
</div>